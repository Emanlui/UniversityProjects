<%- include ('partials/header.ejs'); -%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-employee-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="longStart" placeholder="Starting longitude" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="latStart" placeholder="Starting latitude" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="longFinish" placeholder="Finishing longitude" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="latFinish" placeholder="Finish latitude" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="number_of_route" placeholder="Number of the route" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="name_of_route" placeholder="Name of the route" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add route</button>
        </form>
    </div>
</div>
</body>
</html>
